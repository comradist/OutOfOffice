@model List<OutOfOffice.MVC.Models.Employee.EmployeeVM> // Update with your actual namespace

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

@if (User.IsInRole("HR"))
{
    <p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
}

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].FullName)</th>
            <th>@Html.DisplayNameFor(model => model[0].Subdivision.Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].Position.Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].Status.Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].OutOfOfficeBalance)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Subdivision.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Position.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Status.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.OutOfOfficeBalance)</td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
 
                    <a class="btn btn-warning" asp-action="Deactivate" asp-route-id="@item.Id">Deactivate</a>
    }
                @if (User.IsInRole("Project Manager"))
                    {
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
 
                    <a class="btn btn-success" asp-action="AssignToProject" asp-route-id="@item.Id">Assign to Project</a>
}
            </td>
        </tr>
        }
    </tbody>
</table>
